{
  "coc.preferences.formatOnSaveFiletypes": [
    "typescript",
    "typescript.tsx",
    "Markdown",
    "rust"
  ],
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": [
        "build.sbt"
      ],
      "filetypes": [
        "scala",
        "sbt"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "cuda",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".vim/",
        ".git/",
        ".hg/",
        ".ccls",
        ".ccls-root",
        "compile_commands.json"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
